profile homeoffice {
    output eDP-1 scale 2 mode 3200x1800 position 1920,0
    output "Dell Inc. DELL P2219H 9Y3B8W2" scale 1 mode 1920x1080 position 0,0
    exec swaymsg output DP-1 subpixel rgb
    exec swaymsg output eDP-1 adaptive_sync on
    exec swaymsg output DP-1 adaptive_sync on
    exec swaymsg workspace 7
    exec swaymsg input '"1386:788:Wacom_Intuos_Pro_S_Pen"' map_to_output DP-1
    exec swaymsg input '"1386:788:Wacom_Intuos_Pro_S_(WL)_Pen"' map_to_output DP-1
}

profile tv_home {
    output eDP-1 scale 2 mode 3200x1800 position 0,1080
    output "Sony SONY TV  *02 0x00000101" scale 1 mode 1920x1080 position 0,0
}

profile work {
    output eDP-1 scale 2 mode 3200x1800 position 160,1080
