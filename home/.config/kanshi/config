    exec swaymsg 'input "1386:788:Wacom_Intuos_Pro_S_Pen" map_to_output DP-1'
    exec swaymsg 'input "1386:788:Wacom_Intuos_Pro_S_(WL)_Pen" map_to_output DP-1'
}

