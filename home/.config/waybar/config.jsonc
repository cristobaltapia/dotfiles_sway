    ],
    "modules-center": ["sway/window"],
    "modules-right": [
      "custom/sep3b",
      "custom/sep4",
      "custom/sep3",
      "custom/sep2",
      "sway/language",
      "custom/sep1",
      "clock",
    ],
    "sway/mode": {
      "format": "<i>{}</i>",
    },
    "sway/workspaces": {
      "alphabetical_sort": true,
    },
    "sway/window": {
      "icon": false,
    },
    "cpu": {
      "format": "{usage}% ",
      "tooltip": false,
      "interval": 2,
      "states": {
        "a": 22,
        "b": 44,
        "c": 67,
        "d": 88,
      },
    },
    "sway/language": {
      "min-length": 2,
      "max-length": 3,
    },
    "memory": {
      "format": "{}% ",
      "states": {
        "high": 95,
      },
    },
    "clock": {
      "tooltip-format": "{:%Y-%m-%d | %H:%M}",
      "format": "{:%d/%m/%Y • %H:%M}",
    },
    "custom/sep1": {
      "format": "",
      "interval": "once",
    },
    "custom/sep2": {
      "format": "",
      "interval": "once",
    },
    "custom/sep3": {
      "format": "",
      "interval": "once",
    },
    "custom/sep3b": {
      //"format": ""
      "format": "",
      "interval": "once",
    },
    "custom/sep4": {
      "format": "",
      "interval": "once",
    },
    "custom/left1": {
      "format": "",
      "interval": "once",
    },
    "custom/left2": {
      "format": "",
      "interval": "once",
    },
  },
]
